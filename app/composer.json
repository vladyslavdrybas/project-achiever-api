{
    "name": "vladyslavdrybas/motivator",
    "description": "motivator",
    "type": "project",
    "license": "proprietary",
    "keywords": [
        "motivator"
    ],
    "authors": [
        {
            "name": "Vladyslav Drybas"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-xml": "*",
        "composer/package-versions-deprecated": "1.*",
        "doctrine/annotations": "1.*",
        "doctrine/doctrine-bundle": "^2.6",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.11",
        "gedmo/doctrine-extensions": "^3.0",
        "gesdinet/jwt-refresh-token-bundle": "^1.1",
        "google/apiclient": "^2.15.0",
        "lexik/jwt-authentication-bundle": "^2.19",
        "nelmio/cors-bundle": "^2.2",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.2",
        "stof/doctrine-extensions-bundle": "*",
        "symfony/asset": "^6.3",
        "symfony/console": "^6.3",
        "symfony/doctrine-bridge": "^6.3",
        "symfony/dotenv": "^6.3",
        "symfony/expression-language": "^6.3",
        "symfony/firebase-notifier": "^6.3",
        "symfony/flex": "^2.0",
        "symfony/framework-bundle": "^6.3",
        "symfony/http-client": "^6.3",
        "symfony/monolog-bundle": "^3.0",
        "symfony/notifier": "^6.3",
        "symfony/property-access": "^6.3",
        "symfony/property-info": "^6.3",
        "symfony/routing": "^6.3",
        "symfony/runtime": "^6.3",
        "symfony/security-bundle": "^6.3",
        "symfony/serializer": "^6.3",
        "symfony/translation": "^6.3",
        "symfony/uid": "^6.3",
        "symfony/validator": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "require-dev": {
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^10.0",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan-symfony": "^1.3",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^5.0",
        "psalm/plugin-symfony": "^5.0",
        "symfony/maker-bundle": "^1.0",
        "symfony/web-profiler-bundle": "^6.3",
        "symfony/debug-bundle": "^6.3",
        "symfony/var-dumper": "^6.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "code-check": [
            "@code-check-md",
            "@code-check-phpstan"
        ],
        "code-check-md": "./vendor/bin/phpmd src,public ansi phpmd.xml",
        "code-check-psalm": "./vendor/bin/psalm --config=psalm.xml --show-info=true",
        "code-check-phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=2G",
        "db-check": [
            "bin/console doctrine:schema:validate --skip-sync"
        ],
        "test": [
            "APP_ENV=test ./vendor/bin/phpunit --testdox --configuration ./phpunit.xml"
        ],
        "generate-jwt-keys": [
            "php bin/console lexik:jwt:generate-keypair"
        ],
        "pre-autoload-dump": "Google\\Task\\Composer::cleanup"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.3"
        },
        "google/apiclient-services": [
            "FirebaseCloudMessaging"
        ]
    }
}
